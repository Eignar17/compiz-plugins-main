<?xml version="1.0" encoding="UTF-8"?>
<compiz>
    <plugin name="bs">
	<_short>Brightness and Saturation</_short>
	<_long>Brightness and Saturation adjustments</_long>
	<display>
	    <group>
		<_short>Bindings</_short>
		<option type="key" name="saturation_increase_key">
		    <_short>Saturation Increase</_short>
		    <_long>Saturation Increase</_long>
		    <default/>
		</option>
		<option type="button" name="saturation_increase_button">
		    <_short>Saturation Increase</_short>
		    <_long>Saturation Increase</_long>
		    <default>&lt;Control&gt;&lt;Alt&gt;Button4</default>
		</option>
		<option type="key" name="saturation_decrease_key">
		    <_short>Saturation Decrease</_short>
		    <_long>Saturation Decrease</_long>
		    <default/>
		</option>
		<option type="button" name="saturation_decrease_button">
		    <_short>Saturation Decrease</_short>
		    <_long>Saturation Decrease</_long>
		    <default>&lt;Control&gt;&lt;Alt&gt;Button5</default>
		</option>
		<option type="key" name="brightness_increase_key">
		    <_short>Brightness Increase</_short>
		    <_long>Brightness Increase</_long>
		    <default/>
		</option>
		<option type="button" name="brightness_increase_button">
		    <_short>Brightness Increase</_short>
		    <_long>Brightness Increase</_long>
		    <default>&lt;Shift&gt;&lt;Alt&gt;Button4</default>
		</option>
		<option type="key" name="brightness_decrease_key">
		    <_short>Brightness Decrease</_short>
		    <_long>Brightness Decrease</_long>
		    <default/>
		</option>
		<option type="button" name="brightness_decrease_button">
		    <_short>Brightness Decrease</_short>
		    <_long>Brightness Decrease</_long>
		    <default>&lt;Shift&gt;&lt;Alt&gt;Button5</default>
		</option>
	    </group>
	</display>
	<screen>
	    <group>
		<_short>General</_short>
		<option type="int" name="brightness_step">
		    <_short>Brightness Step</_short>
		    <_long>Brightness Step</_long>
		    <min>1</min>
		    <max>10</max>
		    <default>5</default>
		</option>
		<option type="int" name="saturation_step">
		    <_short>Saturation Step</_short>
		    <_long>Saturation Step</_long>
		    <min>1</min>
		    <max>10</max>
		    <default>5</default>
		</option>
	    </group>
	    <group>
		<_short>Window specific</_short>
		<subgroup>
		    <_short>Saturation settings</_short>
		    <option type="list" name="saturation_matches">
			<_short>Saturation windows</_short>
			<_long>Windows that should have a different saturation by default</_long>
			<type>match</type>
			<default/>
		    </option>
		    <option type="list" name="saturation_values">
			<_short>Saturation window values</_short>
			<_long>Saturation values for windows</_long>
			<type>int</type>
			<default/>
			<min>0</min>
			<max>100</max>
		    </option>
		</subgroup>
		<subgroup>
		    <_short>Brightness settings</_short>
		    <option type="list" name="brightness_matches">
			<_short>Brightness windows</_short>
			<_long>Windows that should have a different brightness by default</_long>
			<type>match</type>
			<default/>
		    </option>
		    <option type="list" name="brightness_values">
			<_short>Brightness window values</_short>
			<_long>Brightness values for windows</_long>
			<type>int</type>
			<default/>
			<min>0</min>
			<max>100</max>
		    </option>
		</subgroup>
	    </group>
	</screen>
    </plugin>
</compiz>

